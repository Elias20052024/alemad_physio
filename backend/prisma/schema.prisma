// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String  // hashed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model Therapist {
  id        Int     @id @default(autoincrement())
  name      String
  specialty String
  email     String  @unique
  phone     String
  status    String  @default("active") // active or inactive

  // Relations
  schedules   TherapistSchedule[]
  breaks      TherapistBreak[]
  daysOff     TherapistDayOff[]
  appointments Appointment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("therapists")
}

model TherapistSchedule {
  id          Int     @id @default(autoincrement())
  therapistId Int
  therapist   Therapist @relation(fields: [therapistId], references: [id], onDelete: Cascade)
  dayOfWeek   Int     // 0-6 (Monday-Sunday)
  startTime   String  // HH:mm format
  endTime     String  // HH:mm format

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([therapistId, dayOfWeek])
  @@map("therapist_schedules")
}

model TherapistBreak {
  id          Int     @id @default(autoincrement())
  therapistId Int
  therapist   Therapist @relation(fields: [therapistId], references: [id], onDelete: Cascade)
  startTime   DateTime
  endTime     DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("therapist_breaks")
}

model TherapistDayOff {
  id          Int     @id @default(autoincrement())
  therapistId Int
  therapist   Therapist @relation(fields: [therapistId], references: [id], onDelete: Cascade)
  date        DateTime  // Full date (day off)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([therapistId, date])
  @@map("therapist_days_off")
}

model Patient {
  id           Int     @id @default(autoincrement())
  fullName     String
  email        String  @unique
  password     String  // hashed
  phone        String
  age          Int
  gender       String
  medicalHistory String?

  // Relations
  appointments Appointment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("patients")
}

model Appointment {
  id          Int     @id @default(autoincrement())
  therapistId Int
  therapist   Therapist @relation(fields: [therapistId], references: [id], onDelete: Restrict)
  patientId   Int
  patient     Patient @relation(fields: [patientId], references: [id], onDelete: Restrict)
  service     String
  date        DateTime
  time        String  // HH:mm format
  status      String  @default("scheduled") // scheduled, completed, cancelled
  duration    Int     @default(60) // minutes

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("appointments")
}
